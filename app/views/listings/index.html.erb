        </ul>
      </div>
      <div class="deals">
        <%= image_tag("advert1.jpg", :class => "responsive-img") %>
      </div>
    </div> <!-- End of Col -->
  </div> <!-- End of Row -->
</div> <!-- End of Listing Page -->

